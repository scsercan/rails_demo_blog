<%= render 'shared/errors', obj: @category %>

<%= form_with(model: @category, class: "shadow p-3 mb-5 bg-light rounded", local: true) do |f| %>
    <div class="form-group row">
        <%= f.label          :name, "Category Name", class: "col-2 col-form-label text-dark" %>
        <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a category name" %>
        </div>
    </div>

    <div class="form-group row  justify-content-center">
        <%= f.submit class: "btn btn-outline-light btn-success" %>
    </div>
<% end %>