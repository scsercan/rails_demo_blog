<div class="container">
    <% if @article.errors.any? %> 
        <h3>The following errors prevented the article from being saved</h3>
        <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    <% end %>
    <div class="row justify-content-center">
        <div class="col-10">
            <%= form_with(model: @article, class: "shadow p-3 mb-5 bg-light rounded", local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :title, class: "col-2 col-form-label text-dark" %>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
                    </div>
                </div>

                <div class="form-group row">
                    <%= f.label      :description, class: "col-2 col-form-label text-dark" %>
                    <div class="col-10">
                        <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
                    </div>
                </div>

                <div class="form-group row  justify-content-center">
                    <%= f.submit class: "btn btn-outline-light btn-success" %>
                </div>
            <% end %>
        </div>
        <%= link_to 'Return to Articles Page', articles_path, class: "text-info" %>
    </div>
</div>