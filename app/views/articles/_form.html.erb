<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors' %>
            
            <%= form_with(model: @article, class: "shadow p-3 mb-5 bg-light rounded", local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :title, class: "col-2 col-form-label text-dark" %>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
                    </div>
                </div>

                <div class="form-group row">
                    <%= f.label      :description, class: "col-2 col-form-label text-dark" %>
                    <div class="col-10">
                        <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
                    </div>
                </div>

                <div class="form-group row  justify-content-center">
                    <%= f.submit class: "btn btn-outline-light btn-success" %>
                </div>
            <% end %>
        </div>
        <div class="col-12"></div>
        <div class="mb-3">
            <%= link_to 'Return to Articles Page', articles_path, class: "text-info" %>
        </div>
    </div>
</div>